{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetwork": {
      "type": "object",
      "defaultValue": {
        "Name": "[concat('Project','-vnet')]",
        "AddressPrefix": "10.203.0.0/24"
      }
    },
    "Subnets": {
      "type": "array",
      "defaultValue": [
        {
          "SubnetName": "GatewaySubnet",
          "AddressPrefix": "10.203.0.224/27",
          "nsgname": "[concat(parameters('Subnets')[copyIndex('Subnets')].SubnetName,'-nsg')]"
        },
        {
          "SubnetName": "[concat('subnet-','01')]",
          "AddressPrefix": "10.203.0.0/25",
          "nsgname": "[concat(parameters('Subnets')[copyIndex('Subnets')].SubnetName,'-nsg')]"
        }
      ]
    },
    "virtualNetworkPeeringsExist": {
      "type": "int",
      "defaultValue": 0
    },
    "virtualNetworkPeerings": {
      "type": "array",
      "defaultValue": [
        {
          "name": "default",
          "remoteVirtualNetwork": "remote",
          "allowVirtualNetworkAccess": true,
          "allowForwardedTraffic": false,
          "allowGatewayTransit": false,
          "useRemoteGateways": false
        }
      ]
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "copy": [
      {
        "name": "virtualNetworkPeerings",
        "count": "[if(equals(parameters('virtualNetworkPeeringsExist'),0),1, length(parameters('virtualNetworkPeerings')))]",
        "input": {
          "name": "[parameters('virtualNetworkPeerings')[copyIndex('virtualNetworkPeerings')].name]",
          "properties": {
            "remoteVirtualNetwork": {
              "id": "[parameters('virtualNetworkPeerings')[copyIndex('virtualNetworkPeerings')].remoteVirtualNetwork]"
            },
            "allowVirtualNetworkAccess": "[parameters('virtualNetworkPeerings')[copyIndex('virtualNetworkPeerings')].allowVirtualNetworkAccess]",
            "allowForwardedTraffic": "[parameters('virtualNetworkPeerings')[copyIndex('virtualNetworkPeerings')].allowForwardedTraffic]",
            "allowGatewayTransit": "[parameters('virtualNetworkPeerings')[copyIndex('virtualNetworkPeerings')].allowGatewayTransit]",
            "useRemoteGateways": "[parameters('virtualNetworkPeerings')[copyIndex('virtualNetworkPeerings')].useRemoteGateways]"
          }
        }
      }
    ]

  },
  "resources": [
    {
      "comments": "Creating Virtual Network with gateway and project subnets",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('virtualNetwork').Name]",
      "apiVersion": "2018-02-01",
      "location": "[variables('location')]",
      "scale": null,
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('virtualNetwork').AddressPrefix]"
          ]
        },
        "copy": [
          {
            "name": "Subnets",
            "count": "[length(parameters('Subnets'))]",
            "input": {
              "name": "[parameters('Subnets')[copyIndex('Subnets')].SubnetName]",
              "properties": {
                "addressPrefix": "[parameters('Subnets')[copyIndex('Subnets')].AddressPrefix]",
                //Set NSG for GatewaySubnet in null
                "networkSecurityGroup": "[if(equals(parameters('Subnets')[copyIndex('Subnets')].SubnetName,'GatewaySubnet'),json('null'),json(concat('{\"id\": \"',resourceId('Microsoft.Network/networkSecurityGroups', parameters('Subnets')[copyIndex('Subnets')].nsgname),'\"}')) )]"
              }
            }
          }
        ],
        "virtualNetworkPeerings": "[if(equals(parameters('virtualNetworkPeeringsExist'),0),json('null'),variables('virtualNetworkPeerings'))]", //"[variables('virtualNetworkPeerings')]",
        "enableDdosProtection": false,
        "enableVmProtection": false
      },
      "dependsOn": []
    }
  ],
  "outputs": {

  }
}